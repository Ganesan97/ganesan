import java.util.*;
public class Hello {

    public static void main(String[] args) {
		//Your Code Here
		Scanner sc=new Scanner(System.in);
		int a=sc.nextInt();
		int b[]=new int[a];
		for(int i=0;i<a;i++)
		{
		    b[i]=sc.nextInt();
		}
		Arrays.sort(b);
	
		System.out.println(b[a-2]);


	}
}
